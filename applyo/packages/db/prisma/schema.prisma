generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id          Int      @id @default(autoincrement())
  question    String
  options     String[]
  createdAt   DateTime @default(now())
  votes       Vote[]
}

model Vote {
  id          Int      @id @default(autoincrement())
  pollId      Int
  optionIndex Int
  voterIP     String?
  sessionId   String
  createdAt   DateTime @default(now())
  poll        Poll     @relation(fields: [pollId], references: [id])
  
  @@unique([pollId, sessionId])
}